<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hy.myfuck.MainActivity">

    <RelativeLayout
        android:id="@+id/one_one"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/one_one_tv"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/black"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/one_one_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/item_ll"
            android:scaleType="fitXY"
            android:layout_below="@+id/one_one_tv" />

        <LinearLayout
            android:id="@+id/item_ll"
            android:layout_width="match_parent"
            android:layout_height="30dp"

            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/bigtv"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="123123"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/bigiv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bigtv2"
            android:layout_below="@+id/bigtv"
            android:background="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/bigtv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="213"
            android:textColor="@color/black" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/three_three"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/three_three_tv"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/black"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/item_ll2"
            android:layout_below="@+id/three_three_tv"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/three_three_iv1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/three_three_iv2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/three_three_iv3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_ll2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/three_three_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="" />

            <TextView
                android:id="@+id/three_three_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/zuoyou"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/zuoyou_tv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:layout_toLeftOf="@+id/zuoyou_iv"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/black"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/zuoyou_iv"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_margin="8dp" />

        <LinearLayout
            android:id="@+id/item_ll3"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/zuoyou_iv"
            android:layout_toLeftOf="@+id/zuoyou_iv"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/main_item_news_tv5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="" />
        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/wuwu"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/wuwu_tv1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/black"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/wuwu_tv2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/wuwu_tv1"
            android:gravity="center_vertical"
            android:text=""
            android:textSize="19sp" />


    </RelativeLayout>
</RelativeLayout>

