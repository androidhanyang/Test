<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/fragment_e_item_iv"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/fragment_e_item_tv1"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/fragment_e_item_iv"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/fragment_e_item_iv"
        android:layout_toRightOf="@+id/fragment_e_item_iv"
        android:gravity="center_vertical"
        android:text="123123123"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/fragment_e_item_tv2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/fragment_e_item_tv1"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignStart="@+id/fragment_e_item_tv1"
        android:layout_below="@+id/fragment_e_item_tv1"
        android:gravity="center_vertical"
        android:text="123123123123"
        android:textSize="15sp" />
</RelativeLayout>